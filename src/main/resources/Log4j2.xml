<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

    <!-- Секция аппендеров -->

    <Appenders>

        <!-- Файловый аппендер -->

        <File name="file" fileName="C:\Program Files\apache-tomcat-8.5.32\logs\log.log">

            <PatternLayout>

                <Pattern>%d %p %c{1.} [%t] %m %ex%n</Pattern>

            </PatternLayout>

        </File>

    </Appenders>

    <!-- Секция логгеров -->

    <Loggers>

        <!-- Корневой логгер -->

        <Root level="trace">

            <AppenderRef ref="file" level="DEBUG"/>

        </Root>

    </Loggers>

</Configuration>